@model BlogCore.Models.Slider
@{
        ViewData["Title"] = "Edit";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h3 class="text-center mt-4">Editar Slider</h3>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="row px-2 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10 offset-1 mt-4">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Nombre"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Estodo"></label>
                    </div>
                    <div class="col-8">
                        <label class="form-check-label">
                            <input asp-for="Estodo" /> Visible
                        </label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="UrlImagen"></label>
                    </div>
                    <div class="col-8">
                        <img src="@Model.UrlImagen" class="mb-1" width="100%" style="border-radius:5px; border: 1px solid #bbb0b0;" />
                        <input type="file" name="archivos" id="subidaArchivo" multiple class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>
